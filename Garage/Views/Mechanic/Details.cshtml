@model Business.Interop.Data.MechanicDto
 
@{
	ViewData["Title"] = "Mechanic";
}
<div class="content">
    <div class="d-flex justify-content-between mb-2">
        <a class="btn btn-outline-info btn-sm" asp-action="Index">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 1 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
            </svg>
            <span class="oi oi-arrow-thick-left"></span> Назад
        </a>
        <a class="text-decoration-none" asp-route-id="@Model.Id" asp-action="Edit">
            <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="black" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
            </svg>
        </a>
    </div>
    <table class="table table-borderless">
        <tbody>
            <tr>
                <td>
                    <b>@Html.DisplayNameFor(model => model.Name)</b>
                </td>
                <td class="text-right">
                    @Html.DisplayFor(model => model.Name)
                </td>
            </tr>
            <tr>
                <td>
                   <b> @Html.DisplayNameFor(model => model.BirthDate)</b>
                </td>
                <td class="text-right">
                    @Html.DisplayFor(model => model.BirthDate)
                </td>
            </tr>
            <tr>
                <td>
                   <b> @Html.DisplayNameFor(model => model.PhoneNumber)</b>
                </td>
                <td class="text-right">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </td>
            </tr>
            <tr>
                <td>
                   <b> @Html.DisplayNameFor(model => model.Email)</b>
                </td>
                <td class="text-right">
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <td>
                   <b> @Html.DisplayNameFor(model => model.WorkScope)</b>
                </td>
                <td class="text-right">              
                    @foreach (var workType in @Model.WorkScope)
                    {
                        <span>@workType.Name; </span>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>